{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
